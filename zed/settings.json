// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "icon_theme": "Catppuccin Frapp√©",
  "project_panel": {
    "dock": "right",
    "folder_icons": true
  },
  "file_finder": {
    "file_icons": true
  },
  "lsp": {
    "omnisharp": {
      "binary": {
        "path": "/usr/bin/omnisharp"
      }
    }
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },

  "vim": {
    "use_system_clipboard": "always",
    "toggle_relative_line_numbers": true
  },
  // "relative_line_numbers": true,
  // Set .conf files as github config
  "file_types": {
    // ".conf": ["Git Config"],
    "Hyprland Config": [
      "hyprland.conf",
      "hyprlandd.conf",
      "hyprland.hl",
      "hyprlandd.hl"
    ]
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "vim_mode": true,
  "ui_font_size": 20,
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "buffer_font_size": 22,
  "ui_font_family": "Readex Pro",

  "buffer_font_family": "JetBrains Mono",
  "terminal": {
    "dock": "bottom",
    "font_family": "JetBrainsMono Nerd Font Mono",
    "line_height": "standard",
    "font_features": {
      "ligatures": true
    },
    "font_weight": 600,
    "font_size": 19,
    "blinking": "on"
  },
  "autosave": "on_window_change",
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  },
  "languages": {
    "Rust": {
      "formatter": "language_server"
    }
  },

  "formatter": "prettier",
  "format_on_save": "on",

  "experimental.theme_overrides": {
    "border": null,
    "border.focused": null,
    "border.variant": null,
    "border.disabled": null,
    "pane.focused_border": null,
    "border.selected": null,
    "panel.focused_border": null,
    "pane_group.border": null,
    "pane_group.focused_border": null,
    "hint.border": null,

    "elevated_surface.background": "#0e1119",
    "predictive": "#71839b",
    "surface.background": "#0e1119",
    "background": "#0e1119",
    "element.background": "#1a4444",
    "drop_target.background": "#131b22",
    "ghost_element.background": "#0c0f16",
    "status_bar.background": "#0c0f16",
    "title_bar.background": "#0c0f16",
    "toolbar.background": "#0f1424",
    "tab_bar.background": "#0c0f16",
    "tab.inactive_background": "#0c0f16",
    "tab.active_background": "#0f1424",
    "panel.background": "#0e1119",
    "scrollbar_thumb.background": "#11172d",
    "scrollbar.thumb.hover_background": "#131b22",
    "scrollbar.track.background": "#0e1119",
    "editor.background": "#0e1119",
    "editor.gutter.background": "#0e1119",
    "editor.active_line.background": "#11172d",
    "terminal.background": "#0e1119",
    "conflict.background": "#101a24",
    "created.background": "#0c1b11",
    "deleted.background": "#1a0c11",
    "error.background": "#1a0c11",
    "hidden.background": "#0d1119",
    "hint.background": "#0f1424",
    "ignored.background": "#0c111e",
    "info.background": "#101a24",
    "modified.background": "#0c182e",
    "predictive.background": "#101a24",
    "renamed.background": "#101a24",
    "success.background": "#0c1b11",
    "unreachable.background": "#111629",
    "warning.background": "#19170f"
  }
}
