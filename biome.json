{
   "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
   "vcs": {
      "enabled": false,
      "clientKind": "git",
      "useIgnoreFile": false
   },
   "files": {
      "ignoreUnknown": false,
      "ignore": ["**/@girs/**", "**/*-lock.json"]
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "useEditorconfig": true,
      "indentWidth": 3
   },
   "organizeImports": {
      "enabled": true
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true
      }
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "double"
      }
   }
}
